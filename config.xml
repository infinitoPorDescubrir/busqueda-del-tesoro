<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ixd.busqueda-del-tesoro" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Busqueda del Tesoro</name>
    <description>
        Una app para jugar a la busqueda del tesoro.
    </description>
    <author email="diegodorado@gmail.com" href="https://diegodorado.com">
        Diego Dorado
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="Orientation" value="portrait" />
    <preference name="LoadUrlTimeoutValue" value="700000" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
